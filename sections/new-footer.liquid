</section>

{% schema %}
{
  "name": "New Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_bg",
      "label": "Footer Background"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Footer Menu 1"
    }
  ],
