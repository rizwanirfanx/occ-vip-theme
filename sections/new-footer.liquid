{{ 'new-footer.css' | asset_url | stylesheet_tag }}

<section class="n-footer" style="background-image: url('{{ section.settings.footer_bg |  image_url  }}');">
  <div class="n-footer__container">
    <div class="n-footer__container__left">
      <img class="n-footer__container__left__logo" src="{{ section.settings.footer_logo |  image_url }}" alt="">
      <div class="n-footer__container__left__socials">
        <p>Follow Us</p>
        <div class="n-footer__container__left__socials__links">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'social-media-link' %}
                <a href="{{ block.settings.social_url }}" class="n-footer__container__left__socials__links__link">
                  <img src="{{ block.settings.social_icon |  image_url  }}" alt="">
                </a>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      <div class="n-footer__container__left__newsletter">
        <p>Subscribe to our newsletter to get the latest news and insights right in your inbox</p>
      </div>
      <div {{ block.shopify_attributes }}>
        {% form 'customer', class: 'newsletter-form' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input black-placeholder-text"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="Newsletter-error--{{ section.id }}"
                {% elsif form.posted_successfully? %}
                  aria-describedby="Newsletter-success--{{ section.id }}"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <label class="field__label" for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
              <button
              style="#CB2027"
                type="submit"
                class="newsletter-form__button field__button"
                name="commit"
                id="Subscribe"
                aria-label="{{ 'newsletter.button_label' | t }}"
              >
                {% render 'icon-arrow' %}
              </button>
            </div>
            {%- if form.errors -%}
              <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                {%- render 'icon-error' -%}
                {{- form.errors.translated_fields.email | capitalize }}
                {{ form.errors.messages.email -}}
              </small>
            {%- endif -%}
          </div>
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="Newsletter-success--{{ section.id }}"
              tabindex="-1"
              autofocus
            >
              {% render 'icon-success' -%}
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {% endform %}
      </div>
    </div>
    <div class="n-footer__container__right">
      <div class="n-footer__container__right__menu-1">
        {% if section.settings.footer_menu_1 != blank %}
          {% for link in section.settings.footer_menu_1.links -%}
            {{ link.title | link_to: link.url }}
          {%- endfor %}
        {% endif %}
      </div>
      <div class="n-footer__container__right__menu-1">
        {% if section.settings.footer_menu_1 != blank %}
          {% for link in linklists['main-menu'].links -%}
            {{ link.title | link_to: link.url }}
          {%- endfor %}
        {% endif %}
      </div>
      <div class="n-footer__container__right__menu-1">
        {% if section.settings.footer_menu_1 != blank %}
          {% for link in linklists['main-menu'].links -%}
            {{ link.title | link_to: link.url }}
          {%- endfor %}
        {% endif %}
      </div>
    </div>
  </div>
  <div class="n-footer__container__line"></div>
  <div class="n-footer__copyright-text">
    Â© 2024 <a href="https://orangecountychoppers.com/" style="color: red; ">Orange County Choppers.</a> All Rights
    Reserved.
  </div>
</section>

{% schema %}
{
  "name": "New Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_bg",
      "label": "Footer Background"
    },
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Footer Menu 1"
    }
  ],
  "blocks": [
    {
      "type": "social-media-link",
      "name": "Social Media Link",
      "settings": [
        {
          "type": "image_picker",
          "id": "social_icon",
          "label": "Social Media Icon"
        },
        {
          "type": "url",
          "id": "social_url",
          "label": "Social Media Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Footer"
    }
  ]
}
{% endschema %}
